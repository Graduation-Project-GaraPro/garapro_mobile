<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <!-- Selected Parent Category -->
    <TextView
        android:id="@+id/tvSelectedParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh mục: Bảo dưỡng"
        android:textSize="14sp"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Search and Filter Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            android:layout_marginEnd="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tìm kiếm dịch vụ...">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Filter Toggle Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleFilter"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text=""
            android:icon="@drawable/ic_filter"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

    <!-- Active Filter Indicator (LUÔN hiển thị, không phụ thuộc filter expand) -->
    <LinearLayout
        android:id="@+id/containerActiveFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bộ lọc:"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="8dp" />

        <!-- THÊM chipActiveFilter vào đây -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipActiveFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            app:closeIconVisible="true"
            app:closeIconTint="@color/text_secondary" />

    </LinearLayout>

    <!-- Filter Section - Collapsible -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Filter Chips -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lọc theo kiểu dịch vụ:"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Sử dụng RecyclerView cho filter chips -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFilterChips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Services List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChildCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Selected Services Summary -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvSelectedCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa chọn dịch vụ nào"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <!-- Selected Services Preview -->
            <LinearLayout
                android:id="@+id/containerSelectedPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Quay lại"
            android:backgroundTint="@color/divider"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Tiếp theo"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"
             />

    </LinearLayout>

</LinearLayout>