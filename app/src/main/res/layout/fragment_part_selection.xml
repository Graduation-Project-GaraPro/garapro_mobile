<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn phụ tùng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_parts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Compatibility info (hidden by default) -->
    <LinearLayout
        android:id="@+id/layout_compatibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp"

        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tv_compatibility_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin tương thích"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_compatibility_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phụ tùng này tương thích với các mẫu xe cụ thể."
            android:textSize="14sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Date Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_request_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày yêu cầu"
            android:focusable="false"
            android:clickable="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Description -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="Mô tả yêu cầu"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Available parts -->
    <TextView
        android:id="@+id/tv_available_parts_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Có 0 phụ tùng khả dụng"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp" />

    <!-- Selected parts -->
    <TextView
        android:id="@+id/tv_selected_parts_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đã chọn: 0 phụ tùng"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <!-- Total price -->
    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền phụ tùng: 0 đ"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_marginTop="8dp" />

</LinearLayout>
